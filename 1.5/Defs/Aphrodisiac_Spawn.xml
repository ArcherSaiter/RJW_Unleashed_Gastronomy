<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <IncidentDef>
    <defName>AphrodisiacTreeSpawn</defName>
    <label>Aphrodisiac tree cluster</label>
    <targetTags>
      <li>Map_PlayerHome</li>
    </targetTags>
    <workerClass>IncidentWorker_PlantCrop</workerClass>
    <baseChance>0.5</baseChance>
    <category>Misc</category>
    <minRefireDays>30</minRefireDays>
    <!--<pointsRange>
      <min>50</min>
      <max>1000</max>
    </pointsRange>-->
    <thingDef>Plant_Aphrodisiac</thingDef>
    <thingCount>5~10</thingCount>
    <minDistance>5</minDistance>
    <maxDistance>25</maxDistance>
    <plantDef>Plant_Aphrodisiac</plantDef>
    <tale>AphrodisiacTreeClusterAppeared</tale>
  </IncidentDef>

  <TaleDef>
    <defName>AphrodisiacTreeClusterAppeared</defName>
    <label>aphrodisiac tree cluster appeared</label>
    <taleClass>Tale_SinglePawn</taleClass>
    <type>Volatile</type>
    <baseInterest>4</baseInterest>
    <rulePack>
      <rulesStrings>
        <li>tale_noun->the sudden appearance of aphrodisiac trees</li>
        <li>tale_noun->a mysterious grove of aphrodisiac trees</li>
        <li>tale_noun->an unexpected cluster of aphrodisiac trees</li>
        <li>image->[PAWN_nameFull] discovering [QUANTITY_adjphrase] aphrodisiac trees [circumstance_group]</li>
        <li>image->[PAWN_nameFull] standing near [QUANTITY_adjphrase] newly sprouted aphrodisiac trees [circumstance_group]</li>
        <li>circumstance_phrase->with a look of surprise</li>
        <li>circumstance_phrase->with a mixture of curiosity and concern</li>
        <li>circumstance_phrase->while other colonists gather around</li>
        <li>desc_sentence->[PAWN_pronoun] can't believe [PAWN_possessive] eyes.</li>
        <li>desc_sentence->The air is filled with a sweet, alluring scent.</li>
        <li>desc_sentence->The trees seem to have appeared overnight.</li>
        <li>desc_sentence->Small, colorful fruits hang temptingly from the branches.</li>
      </rulesStrings>
    </rulePack>
  </TaleDef>
</Defs>
